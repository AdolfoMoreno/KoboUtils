{
  "name": "kobo-utils",
  "version": "0.0.1",
  "description": "An Electron app to display annotations from your Kobo device",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "mocha"
  },
  "build": {
    "appId": "com.example.koboannotations",
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    }
  },
  "devDependencies": {
    "electron": "^25.3.0",
    "electron-builder": "^24.0.0",
    "mocha": "^10.2.0",
    "chai": "^4.3.7"
  }
}